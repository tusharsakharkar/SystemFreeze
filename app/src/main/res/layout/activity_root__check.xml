<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:background="#f9e68b"

    android:layout_height="fill_parent" >

<RelativeLayout   xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tusharking.systemfreeze.root__check">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:id="@+id/lay122"
        android:orientation="vertical">

        <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="center"            android:textSize="20dp"
android:layout_gravity="center_horizontal"
            android:id="@+id/txt_root_check"                android:fontFamily="times new roman"
            android:textColor="#FF0000"




            android:background="@drawable/cir_text"
        android:layout_below="@+id/linearLayout2" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="03dp"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="times new roman"
            android:textColor="#000000"

            android:textSize="17dp"
            android:text="Kernal Version" />

        <TextView
            android:id="@+id/kernal_ver"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"            android:textSize="17dp"
            android:fontFamily="times new roman"
            android:textColor="#000000"

            android:textStyle="bold" />
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"        android:layout_weight="1"
            android:layout_marginLeft="03dp"
            android:id="@+id/linearLayout23">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"            android:textSize="17dp"
                android:fontFamily="times new roman"
                android:textColor="#000000"

                android:text="Model No" />

            <TextView
                android:id="@+id/model_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"            android:textSize="17dp"
                android:fontFamily="times new roman"
                android:textColor="#000000"

                android:layout_weight="1"
                android:textStyle="bold" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"        android:layout_weight="1"
            android:layout_marginLeft="03dp"
            android:id="@+id/linearLayout231">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"            android:textSize="17dp"
                android:fontFamily="times new roman"
                android:textColor="#000000"

                android:text="OS Version " />

            <TextView
                android:id="@+id/os_ver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"            android:textSize="17dp"
                android:fontFamily="times new roman"
                android:textColor="#000000"

                android:layout_weight="1"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"        android:layout_weight="1"
android:layout_marginLeft="03dp"
            android:layout_marginBottom="0dp"
            android:id="@+id/linearLayout2311">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"            android:textSize="17dp"
                android:fontFamily="times new roman"
                android:textColor="#000000"

                android:text="Build Number" />

            <TextView
                android:id="@+id/build_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"            android:textSize="17dp"
                android:fontFamily="times new roman"
android:textColor="#000000"
                android:layout_weight="1"
                android:textStyle="bold" />
        </LinearLayout>
        </LinearLayout>





    </LinearLayout>
</RelativeLayout>
</ScrollView>