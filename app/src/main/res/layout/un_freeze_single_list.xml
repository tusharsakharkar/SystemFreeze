<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffff99"

    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_marginTop="05dp"
        android:layout_marginBottom="05dp"

        android:id="@+id/linearLayout">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <CheckBox
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/chkEnable"
                android:layout_marginRight="02dp"
                android:checked="false" />

            <ImageView
                android:id="@+id/app_icon_unfreeze"
                android:layout_width="48dp"
                android:layout_height="48dp"

                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="01dp"
                android:layout_marginTop="0dp"
                android:paddingBottom="8dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginRight="0dp"
android:layout_marginLeft="05dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/list_app_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#000000"

                    android:layout_marginTop="10dp"

                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView121212_unfreeze"
                    android:layout_below="@+id/list_app_name1"
                    android:textColor="#ffff99"
                    android:background="#ffff99"
android:textSize="01dp"
                  />


            </LinearLayout>




        </LinearLayout>
</LinearLayout>

</RelativeLayout>